<%- contentFor('title') %>
券種グループマスタ新規登録
<%- contentFor('displayId') %>
Aa-7
<%- contentFor('body') %>
<div class="col-sm-12 form-container">
    <% /* フォーム */ %>
    <form method="post" class="form-horizontal" >
        <div class="menu-group">
            <div style="padding:0px 0px 4px 10px;" >
                <a href="/master/tickettypes">券種グループマスタ一覧へ</a>
            </div>
            <% /* メッセージ */ %>
            <% if (message != '') { %>
            <p class="error message">
            <%= message %>
            </p>
            <% } %>
        </div>

        <% /* 券種グループコード */ %>
        <div class="form-group ">
            <label for="_id" class="col-sm-2 control-label label-title">
                券種グループコード<font color="red">＊</font>
            </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="_id" id="_id" placeholder="" maxlength=64 value="<%= forms._id %>">
                <p class="message">
                半角64文字以内でご入力ください。
                </p>
                <p class="error message">
                <% if (errors && errors._id) { %>
                <%- errors._id.msg %>
                <% } %>
                </p>
            </div>
        </div>

        <%- include('form', { forms: forms }) %>

        <% /* 登録ボタン */ %>
        <div class="form-group">
            <div class="btn-area">
                <a class="btn btn-ok btn-primary">登録する</a>
            </div>
        </div>
    </form>
</div>
<script>
$(function(){
    $('.btn-ok').on('click', function(){
        $('form').submit();
    });
});
</script>
