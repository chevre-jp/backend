<%- contentFor('title') %>
作品マスタ一覧
<%- contentFor('displayId') %>
Aa-3
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/filmList.js"></script>
<%- contentFor('body') %>
<% /* フォーム */ %>
<div class="col-sm-12 form-container search">
    <form method="post" class="form-horizontal" >
    <% /* 共通Hiddenコントロール */ %>
    <%- include('../../common/master/_hidden') %>
        <div class="menu-group">
            <% /* メッセージ */ %>
            <% if (filmModel.message !== '') { %>
            <p class="error message text-danger panel-body bg-danger"><%= filmModel.message %></p>
            <% } %>
        </div>
        <% /* 作品コード */ %>
            <div class="form-group ">
                <label for="code" class="col-sm-3 control-label label-title">
                作品コード
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="code" id="code" placeholder="" maxlength=64 value="<%= filmModel.filmCode %>">
                </div>
            </div>
            <% /* 登録日 */ %>
            <div class="form-group form-inline">
                <label for="dateFrom" class="col-sm-3 control-label label-title">
                登録日
                </label>
                <div class="col-sm-9">
                    <input type="text" class="form-control datepicker" name="dateFrom" id="dateFrom" />
                    ～
                    <input type="text" class="form-control datepicker" name="dateTo" id="dateTo" />
                </div>
            </div>
            <% /* 作品名 */ %>
            <div class="form-group">
                <label for="filmNameJa" class="col-sm-3 control-label label-title">
                作品名
                </label>
                <div class="col-sm-9">
                    <input class="form-control" name="filmNameJa" id="filmNameJa" placeholder="" maxlength=64 value="<%= filmModel.filmNameJa %>">
                </div>
            </div>
            <% /* 作品名カナ */ %>
            <div class="form-group">
                <label for="filmNameKana" class="col-sm-3 control-label label-title">
                作品名カナ
                </label>
                <div class="col-sm-9">
                    <input class="form-control" name="filmNameKana" id="filmNameKana" placeholder="" maxlength=64 value="<%= filmModel.filmNameKana %>">
                </div>
            </div>
            <% /* 作品名英 */ %>
            <div class="form-group">
                <label for="filmNameEn" class="col-sm-3 control-label label-title">
                作品名英
                </label>
            <div class="col-sm-9">
                <input class="form-control" name="filmNameEn" id="filmNameEn" placeholder="" maxlength=128 value="<%= filmModel.filmNameEn %>">
            </div>
        </div>
        <% /* 検索ボタン */ %>
        <div class="form-group">
            <div class="panel-body">
                <a class="btn btn-ok search btn-primary"><span>検索する</span></a>
                <a class="reset-condition btn btn-danger"><span>検索内容リセット</span></a>
            </div>
        </div>
    </form>
</div>
<% /* 一覧 */ %>
<div class="col-sm-12 form-container search">
    <div>
        <p id="searchedCount" style="display:none;">
        <% /* 検索結果XX件 */ %>
        検索結果 $searched_count$件
        </p>
    </div>
    <div id="list" class="table-responsive" style="display:none;">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <% /* 作品コード */ %>
                    <th>作品コード</th>
                    <% /* 作品名・カナ・英 */ %>
                    <th style="text-align:left;">作品名<br/>作品名カナ<br/>作品名英</th>
                    <% /* 上映時間(分) */ %>
                    <th>上映<br/>時間(分)</th>
                    <% /* 字幕/吹き替え */ %>
                    <th>字幕 /<br/>吹き替え</th>
                    <% /* 上映形態 */ %>
                    <th>上映形態</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr id="templateRow" _id="$_id$">
                    <% /* 作品コード */ %>
                    <td name="filmCode">$filmCode$</td>
                    <% /* 作品名 */ %>
                    <td name="filmNameJa__filmNameKana__filmNameEn">
                    $filmNameJa$<br/>
                    $filmNameKana$<br/>
                    $filmNameEn$<br/>
                    </td>
                    <% /* 上映時間(分) */ %>
                    <td name="filmMinutes" style="text-align:right;">$filmMinutes$</td>
                    <% /* 字幕/吹き替え */ %>
                    <td name="subtitleDub">$subtitleDub$</td>
                    <% /* 上映形態 */ %>
                    <td name="screeningForm">$screeningForm$</td>
                    <% /* 編集ボタン */ %>
                    <td name="edit" class="center">
                        <div class="btn-area">
                            <a class="btn btn-list edit" data-toggle="modal" data-target="#myModal">
                                <span>編集</span>
                            </a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="pager" class="div_pager_parent"></div>  
</div>
<% /* 共通Loading */ %>
<%- include('../../common/master/_loading') %>
