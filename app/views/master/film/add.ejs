<%- contentFor('styles') %>

<%- contentFor('scripts') %>

<%- contentFor('body') %>
<div class="col-sm-12 form-container">
    <% /* フォーム */ %>
    <form method="post" class="form-horizontal" >
        <div class="menu-group">
            <% /* メッセージ */ %>
            <% if (message !== undefined) { %>
            <p class="error message text-danger panel-body bg-danger"><%= message %></p>
            <% } %>
        </div>
        <% /* 作品コード */ %>
        <div class="form-group ">
            <label for="code" class="col-sm-3 control-label label-title">
                作品コード<font color="red">＊</font>
            </label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="_id" id="_id" placeholder="" maxlength=64 value="<%= forms.code %>">
                <p class="message">
                <% /*半角64文字以内でご入力ください。*/ %>
                半角64文字以内でご入力ください。
                </p>
                <p class="error message text-danger">
                <% if (errors && errors._id) { %>
                <%- errors._id.msg %>
                <% } %>
                </p>
            </div>
        </div>

        <% /* 登録・更新共通部 */ %>
        <%- include('form', { forms: forms }) %>

        <% /* 登録ボタン */ %>
        <div class="form-group">
            <div class="btn-area panel-body">
                <a class="btn btn-ok btn-primary">登録する</a>
            </div>
        </div>
    </form>
</div>
<script>
$(function(){
    $('.btn-ok').on('click', function(){
        $('form').submit();
    });
});
</script>
