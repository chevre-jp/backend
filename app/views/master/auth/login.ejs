<form method="post" class="form-horizontal form-login" >
  <% /* ユーザーID */ %>
  <div class="form-group .form-inline">
    <label for="userId" class="col-sm-3 control-label label-title"><%- __('Master.Form.FieldName.loginId') %></label>
    <div class="col-sm-9">
      <input type="text" name="userId" id="userId" class="form-control" value="<%- userId %>">
      <p class="error message" style="text-align:left;">
        <% if (req.form) { %>
          <%- req.form.getErrors('userId')[0] %>
        <% } %>
      </p>
    </div>
  </div>
  <% /* パスワード */ %>
  <div class="form-group .form-inline">
    <label for="password" class="col-sm-3 control-label label-title"><%- __('Form.FieldName.password') %></label>
    <div class="col-sm-9">
      <input type="password" name="password" id="password" class="form-control" value="<%- password %>">
      <% /* 単体チェックエラー */ %>
      <p class="error message" style="text-align:left;">
        <% if (req.form) { %>
          <%- req.form.getErrors('password')[0] %>
        <% } %>
      </p>
      <% /* 関連チェックエラー */ %>
      <% if (req.form && isValid) { %>
        <% req.form.errors.forEach(function (error) { %>
        <p class="error message" style="text-align:left;"><%- error %></p>
        <% }) %>
      <% } %>
    </div>
  </div>
  <% /* ログインボタン */ %>
  <div class="form-group">
    <div class="btn-area">
      <button type="button" class="btn btn-ok"><%- __('Button.Login') %></button>
    </div>
  </div>
</form>
<script>
$(function(){
    $('.btn-ok').on('click', function(){
        $('form').submit();
    });
});
</script>

