<div class="modal fade" id="newModal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
				<h4 class="modal-title">パフォーマンス新規登録</h4>
			</div>
			<div class="modal-body">
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="filmId">作品コード</label>
                            <div class="col-sm-9">
                                <input type="text" maxlength="6" class="form-control" name="filmId" placeholder="作品コード">
                            </div>
                        </div>
                        <!--<div class="form-group">
                            <label class="col-sm-3 control-label" for="filmNme">作品名</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="filmNme" placeholder="作品名">
                            </div>
                        </div>-->
                        <button type="button" class="btn btn-default film-search-button">検索</button>
                        <h3 class="film-name" data-film-id="">作品未選択</h3>
                        <button type="button" class="btn btn-primary film-select-button">作品を確定</button>
                    </form>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal">
                        <ul class="list-group">
                            <li class="list-group-item theater">劇場 : <span></span></li>
                            <li class="list-group-item day">上映日 : <span></span></li>
                        </ul>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="openTime">開始時間</label>
                            <div class="col-sm-9 form-inline">
                                <select class="form-control" name="hour">
                                <% for (let i = 0; i < 24; i++) { %>
                                <% let hour = ('00' + String(i)).slice(-2); %>
                                    <option value="<%= hour %>"><%= hour %></option>
                                <% } %>
                                </select>
                                時
                                <select class="form-control" name="minutes">
                                <% for (let i = 0; i < 60; i++) { %>
                                <% let minutes = ('00' + String(i)).slice(-2); %>
                                    <option value="<%= minutes %>"><%= minutes %></option>
                                <% } %>
                                </select>
                                分
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <label class="col-sm-3 control-label" for="screen">スクリーン</label>
                            <div class="col-sm-9">
                                <select class="form-control" name="screen">
                                    <option value="">選択してください</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
			</div>
            <input type="hidden" name="film" value="">
            <input type="hidden" name="theater" value="">
            <input type="hidden" name="day" value="">
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
				<button type="button" class="btn btn-primary regist-button">パフォーマンスを登録</button>
			</div>
		</div>
	</div>
</div>