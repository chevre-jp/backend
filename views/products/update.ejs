<%- contentFor('styles') %>

<%- contentFor('scripts') %>
<script src="/js/master/products/form.js"></script>

<%- contentFor('body') %>
<% /* フォーム */ %>
<form method="post">
    <%- include('../common/errorMessage') %>
    <%- include('../common/successMessage') %>

    <%- include('form', { forms: forms, isNew: false }) %>

    <% /* 更新ボタン */ %>
    <button type="button" class="btn btn-ok btn-primary">更新する</button>
    <button type="button" class="btn btn-delete btn-danger">削除する</button>
</form>

<script>
    $(function () {
        $('.btn-ok').on('click', function () {
            $('form').submit();
        });
        // datepickerセット
        if ($('.datepicker').length > 0) {
            $('.datepicker').datepicker({ language: 'ja' });
        }
        if ($('.datetimepicker').length > 0) {
            $('.datetimepicker').datetimepicker({
                locale: 'ja',
                format: 'YYYY-MM-DDTHH:mm:ss+09:00'
            });
        }
    });
</script>