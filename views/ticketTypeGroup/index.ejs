<%- contentFor('title') %>
券種グループマスタ一覧
<%- contentFor('displayId') %>
Aa-8
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/ticketTypeGroupsList.js"></script>
<%- contentFor('body') %>
<% /* フォーム */ %>
<div class="form-container search mb-3">
    <form method="post" class="p-3 bg-light-gray">
        <% /* 共通Hiddenコントロール */ %>
        <%- include('../common/master/_hidden') %>
        <div class="menu-group">
            <% /* メッセージ */ %>
            <% if (message !== '') { %>
            <p class="error message text-danger panel-body bg-danger">
                <%= message %>
            </p>
            <% } %>
        </div>
        <% /* 券種グループコード */ %>
        <div class="form-group row">
            <label for="id" class="col-md-3 pt-0 pt-md-3 text-md-right mb-2 mb-md-0">
                券種グループコード
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="id" id="id" placeholder="" maxlength=64>
            </div>
        </div>
        <% /* 券種グループ名 */ %>
        <div class="form-group row">
            <label for="name" class="col-md-3 pt-0 pt-md-3 text-md-right mb-2 mb-md-0">
                券種グループ名
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="name" id="name" placeholder="" maxlength=64>
            </div>
        </div>
        <% /* 検索ボタン */ %>
        <div class="panel-body">
            <button type="button" class="btn btn-ok search btn-primary">検索する</button>
            <button type="button" class="reset-condition btn btn-danger">検索内容リセット</button>
        </div>
    </form>
</div>
<% /* 一覧 */ %>
<div class="form-container search">
    <p class="mb-3" id="searchedCount" style="display:none;">
        検索結果$searched_count$件
    </p>
    <div id="list" class="scroll-horizontal text-small mb-3" style="display:none;">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th>券種グループコード</th>
                    <th>券種グループ名</th>
                    <th>興行区分コード</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr id="templateRow" _id="$_id$">
                    <td name="ticketGroupCode">$ticketGroupCode$</td>
                    <td name="name.ja">$name.ja$</td>
                    <td name="itemOffered.serviceType.id">$itemOffered.serviceType.id$</td>
                    <td name="edit" class="center">
                        <div class="btn-area text-center">
                            <a class="btn btn-primary btn-list edit" href="/ticketTypeGroups/$id$/update">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </td>
                    <td name="popup" class="center popupListTicketType">
                        <div class="btn-area text-center">
                            <a href="/ticketTypeGroups/ticketTypeList?id=$id$" class="btn btn-primary btn-list edit">
                                <span>関連券種</span>
                            </a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="pager" class="div_pager_parent"></div>
</div>
<%- include('_listTicketTypes') %>
<% /* 共通Loading */ %>
<%- include('../common/master/_loading') %>