<%- contentFor('title') %>
券種グループ検索
<%- contentFor('displayId') %>
Aa-8
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/ticketTypeGroupsList.js"></script>
<%- contentFor('body') %>

<% /* フォーム */ %>

<div class="card">
    <div class="card-body">
        <form method="post">
            <% /* 共通Hiddenコントロール */ %>
            <%- include('../common/master/_hidden') %>
            <div class="menu-group">
            </div>

            <div class="form-row">
                <div class="form-group bmd-form-group col-md-3">
                    <label for="identifier" class="bmd-label-static">
                        コード
                    </label>
                    <input type="text" class="form-control" name="identifier" id="identifier" placeholder=""
                        maxlength=64>
                </div>

                <div class="form-group bmd-form-group col-md-3">
                    <label for="name" class="bmd-label-static">
                        名称
                    </label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="" maxlength=64>
                </div>
                <div class="form-group bmd-form-group col-md-3">
                </div>
                <div class="form-group bmd-form-group col-md-3">
                </div>
            </div>

            <div class="panel-body">
                <a class="btn btn-primary" role="button" href="/ticketTypeGroups/add">
                    <i class=" fa fa-plus"></i> 登録</a>

                <button type="button" class="reset-condition btn btn-secondary float-right">検索内容リセット</button>
                <button type="button" class="btn search btn-ok btn-success float-right">検索</button>
            </div>
        </form>
    </div>
</div>

<% /* 一覧 */ %>
<div class="form-container search">
    <p id="resultStats" style="display:none;">
    </p>
    <!-- <p class="mb-3" id="searchedCount" style="display:none;">
        検索結果$searched_count$件
    </p> -->
    <div id="list" style="display:none;">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="text-primary">
                            <tr>
                                <th>コード</th>
                                <th>名称</th>
                                <th>券種</th>
                                <th>興行区分</th>
                                <th>追加特性</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateRow" _id="$id$">
                                <td name="id__identifier">
                                    <a target="_blank" href="/ticketTypeGroups/$id$/update">
                                        $identifier$
                                        <i class="material-icons" style="font-size: 1.2em;">open_in_new</i>
                                    </a>
                                </td>
                                <td name="name.ja|slice">$name.ja$</td>
                                <td name="offerCount__id" class="text-center">
                                    <a href="javascript:void(0)" class="popupListTicketType" data-id="$id$">
                                        $offerCount$ 券種
                                    </a>
                                </td>
                                <td name="itemOffered.serviceType.codeValue">$itemOffered.serviceType.codeValue$</td>
                                <td name="id__additionalProperty">
                                    <a href="javascript:void(0)" class=" showAdditionalProperty" data-id="$id$">
                                        <span>表示</span>
                                    </a>
                                </td>
                                <td name="id">
                                    <a target="_blank" href="/ticketTypeGroups/$id$/update">
                                        編集
                                        <i class="material-icons" style="font-size: 1.2em;">open_in_new</i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div id="pager" class="div_pager_parent"></div>
</div>

<div class="modal fade" id="modal-additionalProperty" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">券種グループの追加特性</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>

<%- include('_listTicketTypes') %>

<%- include('../common/master/_loading') %>