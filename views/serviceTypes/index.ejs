<%- contentFor('title') %>
興行区分検索
<%- contentFor('displayId') %>
Aa-17
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/serviceTypes/list.js"></script>

<%- contentFor('body') %>

<div class="card">
    <div class="card-body">
        <form method="post">
            <%- include('../common/master/_hidden') %>
            <div class="menu-group">
                <% if (message !== '') { %>
                <p class="error message text-danger panel-body bg-danger">
                    <%= message %>
                </p>
                <% } %>
            </div>

            <div class="form-row">
                <div class="form-group bmd-form-group col-md-6">
                    <label for="codeValue" class="bmd-label-static">
                        コード
                    </label>
                    <input type="text" class="form-control" name="codeValue" id="codeValue" placeholder="" maxlength=64
                        value="">
                </div>
            </div>

            <div class="panel-body">
                <% if (user.cognitoGroups.movieTheaters === undefined || user.cognitoGroups.movieTheaters.length === 0) { %>
                <a class="btn btn-primary" role="button" href="/serviceTypes/add">
                    <i class=" fa fa-plus"></i> 登録</a>
                <% } %>

                <button type="button" class="reset-condition btn btn-secondary float-right">検索内容リセット</button>
                <button type="button" class="btn search btn-ok btn-success float-right">検索</button>
            </div>
        </form>
    </div>
</div>

<div class="form-container search">
    <div id="list" style="display:none;">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="text-primary">
                            <tr>
                                <th>コード</th>
                                <th>名称</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateRow" identifier="$id$">
                                <td name="id__codeValue">
                                    <a target="_blank" href="/serviceTypes/$id$/update">
                                        $codeValue$
                                        <i class="material-icons" style="font-size: 1.2em;">open_in_new</i>
                                    </a>
                                </td>
                                <td name="name.ja">
                                    $name.ja$
                                </td>
                                <td name="edit__id">
                                    <a target="_blank" href="/serviceTypes/$id$/update">
                                        編集
                                        <i class="material-icons" style="font-size: 1.2em;">open_in_new</i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="pager" class="div_pager_parent"></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-additionalProperty" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">興行区分の追加特性</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>

<%- include('../common/master/_loading') %>