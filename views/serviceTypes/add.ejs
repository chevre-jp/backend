<%- contentFor('title') %>
興行区分マスタ登録
<%- contentFor('displayId') %>
Aa-16
<%- contentFor('styles') %>

<%- contentFor('scripts') %>
<script src="/js/master/serviceTypes/form.js"></script>

<%- contentFor('body') %>
<div class="form-container">
    <% /* フォーム */ %>
    <form method="post" class="p-3 bg-light-gray">
        <div class="menu-group">
            <%- include('../common/errorMessage') %>
            <%- include('../common/successMessage') %>
        </div>
        <div class="form-group">
            <label for="id" class="">
                興行区分コード<span class="text-danger">＊</span>
            </label>
            <input type="text" class="form-control" name="id" id="id" placeholder="" maxlength=64
                value="<%= forms.id %>">
            <p class="message">
                <% /*半角64文字以内でご入力ください。*/ %>
                半角64文字以内でご入力ください。
            </p>
            <p class="error message text-danger">
                <% if (errors && errors.id) { %>
                <%- errors.id.msg %>
                <% } %>
            </p>
        </div>

        <% /* 登録・更新共通部 */ %>
        <%- include('form', { forms: forms }) %>

        <% /* 登録ボタン */ %>
        <div class="btn-area panel-body">
            <button type="button" class="btn btn-ok btn-primary">登録する</button>
        </div>
    </form>
</div>