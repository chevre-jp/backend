<%- contentFor('title') %>
アドオン検索
<%- contentFor('displayId') %>
PO-01
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/addOns/index.js"></script>
<%- contentFor('body') %>

<div class="card">
    <div class="card-body">
        <div class="toolbar">
            <!--        Here you can write extra buttons/actions for the toolbar              -->
            <a class="btn btn-primary" href="/addOns/new">
                <i class="material-icons">add</i>登録</a>
            <a class="btn btn-primary search btn-ok" href="#">
                <i class="material-icons">refresh</i>更新</a>
        </div>
        <div class="material-datatables">
            <div id="datatables_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <form method="post">
                            <%- include('../common/master/_hidden') %>

                            <div class="form-group bmd-form-group">
                                <label for="id" class="bmd-label-static">
                                    ID
                                </label>
                                <input type="text" class="form-control" name="id" id="id" placeholder="" maxlength=64>
                            </div>
                        </form>
                    </div>
                </div>
                <div id="list" style="display:none;" class="row">
                    <div class="col-sm-12 table-responsive">
                        <table id="datatables" class="table table-no-bordered table-hover dataTable dtr-inline"
                            cellspacing="0" width="100%" style="width: 100%;" role="grid"
                            aria-describedby="datatables_info">
                            <thead class="text-primary">
                                <tr>
                                    <th>コード</th>
                                    <th>名称</th>
                                    <th>発生金額</th>
                                    <th>アイテム</th>
                                    <th>追加特性</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr id="templateRow">
                                    <td name="id__identifier">
                                        <a target="_blank" href="/addOns/$id$/update">
                                            $identifier$
                                            <i class="material-icons" style="font-size: 1.2em;">open_in_new</i>
                                        </a>
                                    <td name="name.ja">$name.ja$</td>
                                    <td name="priceSpecification.price__priceSpecification.priceCurrency__referenceQuantity.value"
                                        style="text-align:right;">
                                        $priceSpecification.price$ $priceSpecification.priceCurrency$ /
                                        $referenceQuantity.value$
                                    </td>
                                    <td name="itemOffered.name.ja">$itemOffered.name.ja$</td>
                                    <td name="id__additionalProperty">
                                        <a href="javascript:void(0)" class="showAdditionalProperty" data-id="$id$">
                                            <span>表示</span>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-5">
                        <div class="dataTables_info" id="datatables_info" role="status" aria-live="polite">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-7">
                        <div class="dataTables_paginate paging_full_numbers" id="datatables_paginate">
                        </div>
                        <div id="pager" class="div_pager_parent float-right"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-additionalProperty" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">券種の追加特性</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>

<%- include('../common/master/_loading') %>