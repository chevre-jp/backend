<%- contentFor('styles') %>
<%- contentFor('scripts') %>
<script src="/js/lodash.debounce.min.js"></script>
<script src="/js/master/events/screeningEvent.js"></script>

<%- contentFor('body') %>

<div class="form-container search p-3 bg-light-gray mb-4">
    <form>
        <div class="form-group row">
            <label class="col-md-4 pt-0 pt-md-3 text-md-right mb-2 mb-md-0">劇場 <span
                    class="text-danger">＊</span></label>
            <div class="col-md-8">
                <select class="form-control" name="theater">
                    <option value="">選択してください</option>
                    <% for (const movieTheater of movieTheaters) { %>
                    <option value="<%= movieTheater.branchCode %>"><%= movieTheater.name.ja %></option>
                    <% } %>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 pt-0 pt-md-3 text-md-right mb-2 mb-md-0">上映日 <span
                    class="text-danger">＊</span></label>
            <div class="col-md-8">
                <input autocomplete="off" class="form-control datepicker" name="date" placeholder="選択してください"
                    maxlength="10">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 pt-0 pt-md-3 text-md-right mb-2 mb-md-0">日付 <span
                    class="text-danger">＊</span></label>
            <div class="col-md-8 py-3">
                <div class="pl-4">
                    <input class="form-check-input" type="radio" name="days" id="radio-days-1" value="1" checked>
                    <label class="form-check-label mr-3" for="radio-days-1">1日</label>
                    <input class="form-check-input" type="radio" name="days" id="radio-days-3" value="3">
                    <label class="form-check-label mr-3" for="radio-days-3">3日</label>
                    <input class="form-check-input" type="radio" name="days" id="radio-days-7" value="7">
                    <label class="form-check-label" for="radio-days-7">7日</label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 pt-0 pt-md-3 text-md-right mb-2 mb-md-0">シアター</label>
            <div class="col-md-8">
                <select class="form-control" name="screen">
                    <option value="">劇場を選択してください</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4 pt-0 pt-md-3 text-md-right mb-2 mb-md-0"></label>
            <div class="col-md-8 py-3">
                <div class="pl-4">
                    <input class="form-check-input" type="checkbox" name="onlyReservedSeatsAvailable"
                        id="onlyReservedSeatsAvailable" value="1">
                    <label class="form-check-label" for="onlyReservedSeatsAvailable">座席指定有のみ</label>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <button type="button" class="btn btn-primary search-button">検索する</button>
            <button type="button" class="btn btn-primary pull-right add-button">新規作成</button>
        </div>
    </form>
</div>

<div class="scheduler" style="display: none"></div>

<%- include('add') %>
<%- include('edit') %>
<%- include('../../common/master/_loading') %>