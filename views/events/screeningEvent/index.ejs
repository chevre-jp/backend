<%- contentFor('title') %>
スケジュール検索
<%- contentFor('displayId') %>
Aa-4
<%- contentFor('styles') %>
<%- contentFor('scripts') %>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="/js/lodash.debounce.min.js"></script>
<script src="/js/master/events/screeningEvent.js"></script>

<%- contentFor('body') %>

<div class="card">
    <div class="card-body search">
        <div class="toolbar">
            <!--        Here you can write extra buttons/actions for the toolbar              -->
            <button type="button" class="btn btn-primary add-button"><i class="material-icons">add</i>登録</button>
            <% if (process.env.USE_COA === '1') { %>
            <a class="btn btn-primary importFromCOA" role="button" href="javascript:void(0)">
                <i class="material-icons">add</i>COAからインポート</a>
            <% } %>
            <a class="btn btn-primary search btn-ok search-button" href="#">
                <i class="material-icons">refresh</i>更新</a>
        </div>

        <div class="material-datatables">
            <div id="datatables_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <form>
                            <div class="form-row">
                                <div class="form-group bmd-form-group col-md-2">
                                    <label class="bmd-label-static">劇場 <span class="text-danger">＊</span></label>

                                    <div class="input-group">
                                        <select class="form-control" name="theater">
                                            <option value="">選択してください</option>
                                            <% if (user.cognitoGroups.movieTheaters === undefined || user.cognitoGroups.movieTheaters.length === 0) { %>
                                            <% for (const movieTheater of movieTheaters) { %>
                                            <option value="<%= movieTheater.id %>"><%= movieTheater.name.ja %></option>
                                            <% } %>
                                            <% } else { %>
                                            <% for (const movieTheater of user.cognitoGroups.movieTheaters) { %>
                                            <option value="<%= movieTheater.id %>"><%= movieTheater.name.ja %></option>
                                            <% } %>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group bmd-form-group col-md-2">
                                    <label class="bmd-label-static">スクリーン</label>
                                    <select class="form-control" name="screen">
                                        <option value="">劇場を選択してください</option>
                                    </select>
                                </div>

                                <div class="form-group bmd-form-group col-md-3">
                                    <label class="bmd-label-static">上映日 <span class="text-danger">＊</span></label>

                                    <div class="input-group">
                                        <input autocomplete="off" class="form-control datepicker" name="date"
                                            placeholder="選択してください" maxlength="10">
                                        <div class="input-group-append">
                                            <span class="input-group-text">から</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group bmd-form-group col-md-3">
                                    <label class="bmd-label-static"></label>

                                    <div class="input-group">
                                        <div class="form-check form-check-radio form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="radio" name="days"
                                                    id="radio-days-1" value="1" checked> 1日
                                                <span class="circle">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                        <div class="form-check form-check-radio form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="radio" name="days"
                                                    id="radio-days-3" value="3"> 3日
                                                <span class="circle">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                        <div class="form-check form-check-radio form-check-inline">
                                            <label class="form-check-label">
                                                <input class="form-check-input" type="radio" name="days"
                                                    id="radio-days-7" value="7"> 7日
                                                <span class="circle">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group bmd-form-group col-md-2">
                                    <label class="bmd-label-static">座席指定</label>

                                    <div class="form-check">
                                        <label class="form-check-label" for="onlyReservedSeatsAvailable">
                                            <input class="form-check-input" type="checkbox"
                                                name="onlyReservedSeatsAvailable" id="onlyReservedSeatsAvailable"
                                                value="1">
                                            座席指定有のみ
                                            <span class="form-check-sign">
                                                <span class="check"></span>
                                            </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="scheduler" class="d-none">
    <div v-if="scheduleData.dates.length > 0" class="scheduler text-small">
        <div class="table-header">
            <table class="border">
                <thead class="header">
                    <tr class="border text-center">
                        <td v-bind:style="{ width: TIME_WIDTH + 'px' }" class="border" rowspan="2">時間</td>
                        <td v-for="date in scheduleData.dates" class="border" v-bind:colspan="date.screens.length">
                            {{ moment(date.data).format('MM/DD') }}</td>
                    </tr>
                    <template v-for="date in scheduleData.dates">
                        <td v-for="screen in date.screens" class="border text-center"
                            v-bind:style="{ width: SCREEN_WIDTH + 'px' }">
                            <div class="mx-auto text-overflow" v-bind:style="{ width: (SCREEN_WIDTH - 3) + 'px' }">
                                {{ screen.data.name.ja }}</div>
                        </td>
                    </template>
                </thead>
            </table>
        </div>
        <div class="scrollable-body">
            <table class="border">
                <tbody>
                    <tr>
                        <td class="text-center border" v-bind:style="{ width: TIME_WIDTH + 'px' }">
                            <div v-for="time in times" v-bind:style="{ height: HOUR_HEIGHT + 'px' }"
                                class="border-bottom">
                                {{ time }}</div>
                        </td>
                        <template v-for="date in scheduleData.dates">
                            <td v-for="screen in date.screens" class="screen border-right border-left"
                                v-bind:style="{ width: SCREEN_WIDTH + 'px' }">
                                <div v-for="time in times" v-bind:style="{ height: HOUR_HEIGHT + 'px' }"
                                    class="border-bottom w-100"></div>
                                <div v-for="performance in screen.performances"
                                    class="performance w-100 overflow-hidden px-1"
                                    v-on:click="editPerformance(performance)"
                                    v-bind:style="getPerformanceStyle(performance)">
                                    <div v-bind:class="{ 
                                    'bg-danger': getOverlapPerformanceCount(performance, screen.performances) > 0,
                                    'bg-primary': !getAdditionalProperty(performance.superEvent.additionalProperty, 'color') && getOverlapPerformanceCount(performance, screen.performances) === 0
                                    }" v-bind:style="{ backgroundColor: getAdditionalProperty(performance.superEvent.additionalProperty, 'color') }"
                                        class="inner h-100 p-1 rounded pointer border border-white">
                                        <div class="overflow-hidden nowrap mw-100 text-x-small text-white">
                                            {{ performance.name.ja }}
                                        </div>
                                        <div class="overflow-hidden">
                                            <a class="badge badge-info mw-100" target="_blank"
                                                v-bind:href="'/ticketTypeGroups/' + performance.offers.id + '/update'">
                                                {{ performance.offers.name.ja }}
                                            </a>
                                        </div>
                                        <div class="overflow-hidden">
                                            <span v-if="isReservedSeatsAvailable(performance)"
                                                class="badge badge-success">
                                                座席指定</span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </template>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('add') %>
<%- include('edit') %>
<%- include('../../common/master/_loading') %>