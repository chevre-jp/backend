<%- contentFor('title') %>
劇場検索
<%- contentFor('displayId') %>
Aa-12
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/places/movieTheaterList.js"></script>

<%- contentFor('body') %>

<div class="card">
    <div class="card-body">
        <form method="post">
            <%- include('../../common/master/_hidden') %>
            <div class="menu-group">
            </div>

            <div class="form-group bmd-form-group">
                <label for="name" class="bmd-label-static">
                    名称
                </label>
                <input class="form-control" name="name" id="name" placeholder="" maxlength=64>
            </div>

            <div>
                <a class="btn btn-primary" role="button" href="/places/movieTheater/new">
                    <i class=" fa fa-plus"></i> 登録</a>

                <button type="button" class="reset-condition btn btn-secondary float-right">検索内容リセット</button>
                <button type="button" class="btn search btn-ok btn-success float-right">検索</button>
            </div>
        </form>
    </div>
</div>

<div class="form-container search">
    <p id="resultStats" style="display:none;">
    </p>
    <!-- <p class="mb-3" id="searchedCount" style="display:none;">
        検索結果 $searched_count$件
    </p> -->
    <div id="list" style="display:none;">

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table">
                        <thead class="text-primary">
                            <tr>
                                <th>コード</th>
                                <th>名称</th>
                                <th>電話番号</th>
                                <th>販売条件</th>
                                <th>スクリーン</th>
                                <th>追加特性</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="templateRow" identifier="">
                                <td name="id__branchCode">
                                    <a target="_blank" href="/places/movieTheater/$id$/update">
                                        $branchCode$
                                        <i class="material-icons" style="font-size: 1.2em;">open_in_new</i>
                                    </a>
                                </td>
                                <td name="name.ja|slice__name.en|slice">
                                    $name.ja$<br>
                                    $name.en$
                                </td>
                                <td name="telephone">
                                    <p>$telephone$</p>
                                </td>
                                <td
                                    name="offers.eligibleQuantity.maxValue__availabilityStartsGraceTimeInDays__availabilityEndsGraceTimeInMinutes">
                                    $offers.eligibleQuantity.maxValue$ 席まで
                                    <br>$availabilityStartsGraceTimeInDays$日前から$availabilityEndsGraceTimeInMinutes$まで販売
                                </td>
                                <td name="id" class="">
                                    <a href="javascript:void(0)" class="showContainsPlace" data-id="$id$">
                                        <span>表示</span>
                                    </a>
                                </td>
                                <td name="branchCode" class="">
                                    <a href="javascript:void(0)" class="showAdditionalProperty"
                                        data-branchCode="$branchCode$">
                                        <span>表示</span>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div id="pager" class="div_pager_parent"></div>
</div>

<div class="modal fade" id="modal-additionalProperty" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">劇場の追加特性</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-containsPlace" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">スクリーン情報</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>

<%- include('../../common/master/_loading') %>