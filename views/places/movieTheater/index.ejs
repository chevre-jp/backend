<%- contentFor('title') %>
劇場検索
<%- contentFor('displayId') %>
Aa-12
<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/master/commonMaster.js"></script>
<script src="/js/master/commonMasterList.js"></script>
<script src="/js/master/places/movieTheaterList.js"></script>

<%- contentFor('body') %>

<div class="form-container search p-3 bg-light-gray mb-3">
    <form method="post">
        <%- include('../../common/master/_hidden') %>
        <div class="menu-group">
        </div>

        <div class="form-group">
            <label for="name" class="">
                名称
            </label>
            <input class="form-control" name="name" id="name" placeholder="" maxlength=64>
        </div>

        <div>
            <a class="btn btn-primary" role="button" href="/places/movieTheater/new">
                <i class=" fa fa-plus"></i> 登録</a>

            <button type="button" class="reset-condition btn btn-secondary float-right">検索内容リセット</button>
            <button type="button" class="btn search btn-ok btn-success float-right">検索</button>
        </div>
    </form>
</div>

<div class="form-container search">
    <!-- <p class="mb-3" id="searchedCount" style="display:none;">
        検索結果 $searched_count$件
    </p> -->
    <div id="list" class="scroll-horizontal text-small mb-3" style="display:none;">
        <table class="table table-bordered table-striped mb-0">
            <thead>
                <tr>
                    <th>コード</th>
                    <th>名称<br>英語名称<br>カナ</th>
                    <th>属性</th>
                    <th>座席購入上限数<br>販売開始日<br>上映後販売終了時間</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr id="templateRow" identifier="">
                    <td name="id__branchCode"><a target="_blank"
                            href="/places/movieTheater/$id$/update">$branchCode$</a>
                    </td>
                    <td name="name.ja__name.en__kanaName">
                        $name.ja$<br>
                        $name.en$<br>
                        $kanaName$<br>
                    </td>
                    <td name="telephone">
                        <p>$telephone$</p>
                    </td>
                    <td
                        name="offers.eligibleQuantity.maxValue__availabilityStartsGraceTimeInDays__availabilityEndsGraceTimeInMinutes">
                        $offers.eligibleQuantity.maxValue$枚
                        <br>$availabilityStartsGraceTimeInDays$日前
                        <br>$availabilityEndsGraceTimeInMinutes$
                    </td>
                    <td name="branchCode__id" class="">
                        <div class="text-center">
                            <a href="javascript:void(0)" class="btn btn-sm btn-outline-primary showAdditionalProperty"
                                data-branchCode="$branchCode$">
                                <span>追加特性</span>
                            </a>
                        </div>
                        <div class="text-center">
                            <a href="javascript:void(0)" class="btn btn-sm btn-outline-secondary showContainsPlace"
                                data-id="$id$">
                                <span>スクリーン情報</span>
                            </a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="pager" class="div_pager_parent"></div>
</div>

<div class="modal fade" id="modal-additionalProperty" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">劇場の追加特性</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-containsPlace" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
                <h4 class="modal-title">スクリーン情報</h4>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>

<%- include('../../common/master/_loading') %>