<%- contentFor('title') %>
劇場登録
<%- contentFor('displayId') %>
Aa-18
<%- contentFor('styles') %>

<%- contentFor('scripts') %>

<%- contentFor('body') %>
<div class="form-container p-3 bg-light-gray">
    <% /* フォーム */ %>
    <form method="post">
        <div class="menu-group">
            <%- include('../../common/errorMessage') %>
            <%- include('../../common/successMessage') %>
        </div>

        <div class="form-group row">
            <label for="branchCode" class="col-md-4 pt-0 pt-md-3 text-md-right mb-2 mb-md-0">
                枝番号<span class="text-danger">＊</span>
            </label>
            <div class="col-md-8">
                <input type="text" class="form-control" name="branchCode" id="branchCode" placeholder="" maxlength=64
                    value="<%= forms.branchCode %>">
                <p class="message">
                    <% /*半角64文字以内でご入力ください。*/ %>
                    半角64文字以内でご入力ください。
                </p>
                <p class="error message text-danger">
                    <% if (errors && errors.branchCode) { %>
                    <%- errors.branchCode.msg %>
                    <% } %>
                </p>
            </div>
        </div>


        <%- include('form', { forms: forms, isNew: true }) %>

        <div class="btn-area panel-body">
            <button type="button" class="btn btn-ok btn-primary">登録する</button>
        </div>
    </form>
</div>

<script>
    $(function () {
        $('.btn-ok').on('click', function () {
            $('form').submit();
        });
        // datepickerセット
        $('.datepicker').datepicker({
            language: 'ja'
        })
    });
</script>